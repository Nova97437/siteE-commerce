					<h5 class="card-title">{{ produit.nom }}</h5>
					<p class="card-text">description :
						{{ produit.description }}</p>
					<p class="card-text">{{ produit.prix }}â‚¬</p>
				</div>
                <div>
                    <button><a href="{{ path('app_produits_show', {'id': produit.id}) }}">show</a></button>
                </div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
